-# coding: utf-8

%h2 settings

%h3 データセット
.row.pull-right.clearfix{style: 'margin-top: -40px'}
  !=button_link '作成', url(:setting_datasets, :new), icon: 'plus-sign'
%table.table.table-striped.table-bordered
  %tr
    -%w{名前 データ型 備考}.each do |header|
      %th=header
  -@datasets.each do |dataset|
    %tr
      %td=link_to dataset.name, url(:setting_datasets, :edit, id: dataset.id)
      %td
        -dataset.columns.each do |column|
          =link_to column.name, url(:setting_columns, :edit, id: column.id)
      %td=dataset.remark


%h3 作成ずみのデータ型
.row.pull-right.clearfix{style: 'margin-top: -40px'}
  !=button_link '作成', url(:setting_columns, :new), icon: 'plus-sign'
%table.table.table-striped.table-bordered
  %tr
    -%w{名前 型 備考}.each do |header|
      %th=header
  -@data_columns.each do |data_column|
    %tr
      %td=link_to data_column.name, url(:setting_columns, :edit, id: data_column.id)
      %td=data_column.type
      %td=data_column.remark

